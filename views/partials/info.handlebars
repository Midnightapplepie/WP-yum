<link rel="stylesheet" href="/css/sass_compiled/info_style.css">
<div class="mdl-grid cards-holder">
	<div class="mdl-card mdl-cell mdl-cell--12-col mdl-shadow--2dp">
		<div class="mdl-card__title mdl-card--border">
			<h2 class="mdl-card__title-text">Business Hours</h2>
			</div>
		<div class="mdl-card__supporting-text mdl-grid biz-hour-desktop">
			{{#each info.businessHours}}
				<div class="mdl-cell mdl-cell--4-col {{class}}">{{day}}</div>
				<div class="mdl-cell mdl-cell--4-col ta-ctn {{class}}">{{lunchTime}}</div>
				<div class="mdl-cell mdl-cell--4-col ta-ctn {{class}}">{{dinnerTime}}</div>
			{{/each}}
		</div>
		<div class="mdl-card__supporting-text mdl-grid biz-hour-mobile">
			{{#each info.businessHours}}
				{{#if day}}
				<div class="light-border {{class}}">
					<div class="mdl-cell mdl-cell--12-col">{{day}}</div>
					<div class="mdl-cell mdl-cell--12-col ta-ctn">Lunch: {{lunchTime}}</div>
					<div class="mdl-cell mdl-cell--12-col ta-ctn">Dinner: {{dinnerTime}}</div>
				</div>
				{{/if}}
			{{/each}}
		</div>
	</div>

	<div class="mdl-card mdl-cell mdl-cell--12-col mdl-shadow--2dp">
		<div class="mdl-card__title po-rel">
			<h2 class="mdl-card__title-text">Address</h2>
			<div class="btn-container">
				<button id="sv-btn" class="mdl-button mdl-js-button mdl-button--raised mdl-button--colored mdl-js-ripple-effect">Street View</button>
			</div>
		</div>
		<div class="mdl-card__media mdl-card--border map-container">
			<div id="map" class="map fl-l"></div>
			<div id="street-view" class="map fl-l"></div>
		</div>
		<div class="mdl-card__supporting-text mdl-grid">
			<div class="mdl-cell mdl-cell--12-col ta-ctn">{{info.address.street}}</div>
			<div class="mdl-cell mdl-cell--12-col ta-ctn">{{info.address.city}}, {{info.address.state}} {{info.address.zip}}</div>
			<a id="dir-btn" target="_blank" href="" class="mdl-button mdl-js-button mdl-button--raised mdl-button--colored mdl-js-ripple-effect">Get Direction</a>
		</div>
		<div id="dir-link" class="mdl-card__actions mdl-card--border mdl-shadow--4dp">
    		<a href="" target="_blank">Open direction</a>
  		</div>
	</div>
</div>

<script type="text/javascript" src="js/googleMap.js"></script>
<script type="text/javascript" src="js/info.js"></script>
    <script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyB1s7Fm2JoMYg8pWHZDp_a6G2wtIm2Kixg&callback=initMap"
    async defer></script>

